@model IEnumerable<Dziennik.Models.Ogloszenie_dla_rodzicow>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ogłoszenia dla rodziców</h2>

<p>
    @Html.ActionLink("Dodaj", "Create",null, new { @class = "btn btn-default" })
</p>
<table class="table table-bordered">
    <tr>
        <th>Klasa</th>
        <th>Nauczyciel</th>
        <th>Nagłówek</th>
        <th>Treść</th>
        <th>Data</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.klasa.nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nauczyciel.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.naglowek)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tresc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.data)
        </td>
        <td>
            @Html.ActionLink("Edycja", "Edit", new { id=item.ID }, new { @class = "btn btn-default" })
            @Html.ActionLink("Szczegóły", "Details", new { id=item.ID }, new { @class = "btn btn-default" })
            @Html.ActionLink("Usuń", "Delete", new { id=item.ID }, new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>

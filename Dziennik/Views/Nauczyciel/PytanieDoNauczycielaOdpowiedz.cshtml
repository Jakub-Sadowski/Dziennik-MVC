@model Dziennik.Models.Pytanie_ucznia

@{
    ViewBag.Title = "Edit";
}

<h2>Odpowiedź</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Pytanie ucznia</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.UczenID)
        @Html.HiddenFor(model => model.NauczycielID)
        @Html.HiddenFor(model => model.PrzedmiotID)
        @Html.HiddenFor(model => model.Data_pytania)
        @Html.HiddenFor(model => model.Pytanie)

								<div class="form-group">
            @Html.LabelFor(model => model.Uczen, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Uczen.FullName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

								<div class="form-group">
            @Html.LabelFor(model => model.Przedmiot, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Przedmiot.nazwa, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pytanie, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Pytanie, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

								<div class="form-group">
            @Html.LabelFor(model => model.Data_pytania, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Data_pytania, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

								<div class="form-group">
            @Html.LabelFor(model => model.Odpowiedz, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Odpowiedz, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Odpowiedz, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Odpowiedz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Wróć", "PytaniaDoNauczyciela")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

        <br /
        <div class="btn-group" role="group" aria-label="Basic example">
            @if (ViewBag.back != null)
            {

                <input type="submit" value="Wróć" class="btn btn-default" onclick="location.href='@Url.Action("Pytanie", "Uczen",new {id = ViewBag.back })'" />


            }
            else
            {
                <input type="submit" value="Wróć" class="btn btn-default" disabled />
            }

            @if (ViewBag.next != null)
            {

                <input type="submit" value="Dalej" class="btn btn-default" onclick="location.href='@Url.Action("Pytanie", "Uczen",new {id = ViewBag.next })'" />


            }
            else
            {
                <input type="submit" value="Dalej" class="btn btn-default" disabled />
            }

        </div>

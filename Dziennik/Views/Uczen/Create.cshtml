@model Dziennik.Models.Uczen

@{
    ViewBag.Title = "Create";
}

<h2>Dodawanie</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Uczen</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="control-label col-md-2"><b>Imię</b></div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.imie, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.imie, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><b>Nazwisko</b></div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.nazwisko, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nazwisko, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><b>Login</b></div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.login, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.login, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><b>Hasło</b></div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.haslo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.haslo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><b>Poziom klasy</b></div>
        <div class="col-md-10">
            @Html.EnumDropDownListFor(x => x.Klasa.level, null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.KlasaID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><b>Numer klasy</b></div>
        <div class="col-md-10">
            @Html.DropDownList("KlasaID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.KlasaID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><b>Rodzic</b></div>
        <div class="col-md-10">
            @Html.DropDownList("RodzicID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RodzicID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Dodaj" class="btn btn-default" />
            
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Powrót", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
